@model List<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Categoty List</h1>
<br />
@using (Html.BeginForm())
{
    <p>
        Food Name:@Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Category Name</th>

        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryId</td>
            <td>@x.CategoryName</td>

            <td><a href="/Category/CategoryDelete/@x.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryId" class="btn btn-success">Update</a></td>
        </tr>

    }

</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">New Category</a>

